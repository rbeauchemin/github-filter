{
    "name": "GHFilter",
    "version": "1.0.0",
    "description": "reloads Github page with desired filters (issues, PRs)",
    "manifest_version": 3,
    "author": "Ryan Beauchemin",
    "icons": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },    
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "GHFilter"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}